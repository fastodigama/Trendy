@model IEnumerable<Trendy.Models.TopicDto>
<style>
    h2 {
        text-align: center;
        color: #333;
        font-family: Arial, sans-serif;
        margin-bottom: 20px;
    }

    a[href="/TopicPage/New"] {
        display: inline-block;
        margin-bottom: 20px;
        padding: 10px 15px;
        background-color: #28a745;
        color: #fff;
        text-decoration: none;
        border-radius: 4px;
        font-weight: bold;
    }

        a[href="/TopicPage/New"]:hover {
            background-color: #218838;
        }

    .row {
        max-width: 800px;
        margin: auto;
    }

    .col-md-12 {
        background-color: #f0f0f0;
        padding: 15px;
        border-radius: 6px;
        margin-bottom: 15px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        font-family: 'Segoe UI', sans-serif;
    }

        .col-md-12 a {
            font-size: 18px;
            color: #007bff;
            font-weight: bold;
            text-decoration: none;
        }

            .col-md-12 a:hover {
                text-decoration: underline;
            }

        .col-md-12 p {
            margin-top: 8px;
            color: #555;
        }
</style>

<h2>Topics List</h2>

<a href="/TopicPage/New">New Topic</a>

<div class="row">
    @foreach (var topic in Model)
    {
        <div class="col-md-12 mb-3">
            <a href="/TopicPage/Details/@topic.TopicId">
                @topic.TopicTitle (@topic.CreatedBy)
            </a>
            <p>@topic.TopicDescription</p>
        </div>
    }
</div>
