@model Trendy.Models.CreateTopicDto
<style>
    form {
        max-width: 600px;
        margin: 30px auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        font-family: Arial, sans-serif;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    h2 {
        text-align: center;
        color: #333;
    }

    label {
        display: block;
        margin-bottom: 6px;
        font-weight: bold;
        color: #444;
    }

    input[type="text"],
    textarea,
    select {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 14px;
    }

        select[multiple] {
            height: 100px;
        }

    button {
        background-color: #007acc;
        color: white;
        padding: 10px 16px;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        cursor: pointer;
        width: 100%;
    }

        button:hover {
            background-color: #005fa3;
        }
</style>

<h2>Add New Topic</h2>

<form action="/TopicPage/Add" method="post">
    <div>
        <label>Title</label>
        <input name="TopicTitle" />
    </div>

    <div>
        <label>Description</label>
        <textarea name="TopicDescription"></textarea>
    </div>

    <div>
        <label>Categories</label>
        <select name="CategoryIds" multiple>
            @foreach (var cat in ViewBag.CategoryList)
            {
                <option value="@cat.categoryId">@cat.categoryName</option>

            }
        </select>
    </div>

    <button type="submit">Add Topic</button>
</form>
