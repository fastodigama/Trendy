@model Trendy.Models.TopicDto
<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #f8f9fa;
        margin: 20px;
        color: #333;
    }

    h2 {
        text-align: center;
        color: #2c3e50;
        margin-bottom: 10px;
    }

    p {
        text-align: center;
        margin-bottom: 30px;
        font-size: 16px;
        color: #555;
    }

    h4 {
        margin-top: 30px;
        color: #444;
    }

    ul {
        list-style-type: disc;
        padding-left: 20px;
        margin-bottom: 20px;
    }

    li {
        margin-bottom: 10px;
    }

    form {
        margin-top: 20px;
        background-color: #fff;
        padding: 15px;
        border-radius: 6px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.05);
    }

    textarea {
        width: 100%;
        padding: 10px;
        border-radius: 4px;
        border: 1px solid #ccc;
        resize: vertical;
        font-size: 14px;
    }

    button {
        margin-top: 10px;
        background-color: #17a2b8;
        color: white;
        padding: 10px 14px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-weight: bold;
    }

        button:hover {
            background-color: #138496;
        }

    hr {
        margin: 30px 0;
    }

    a[href^="/TopicPage/ConfirmDelete"] {
        display: inline-block;
        color: #dc3545;
        font-weight: bold;
        text-decoration: none;
    }

        a[href^="/TopicPage/ConfirmDelete"]:hover {
            text-decoration: underline;
        }
</style>

<h2>@Model.TopicTitle</h2>
<p>@Model.TopicDescription</p>

<h4>Categories</h4>
<ul>
    @foreach (var category in Model.TopicCategory)
    {
        <li>@category</li>
    }
</ul>

<h4>Comments</h4>
@if (Model.Comments != null && Model.Comments.Any())
{
    <ul>
        @foreach (var comment in Model.Comments)
        {
            <li>
                <strong>@comment.UserName</strong> (@comment.CreatedAt):<br />
                @comment.CommentText
            </li>
        }
    </ul>
}
else
{
    <p>No comments yet.</p>
}

<h4>Add a Comment</h4>
<form method="post" asp-action="AddComment" asp-controller="TopicPage">
    <input type="hidden" name="TopicId" value="@Model.TopicId" />
    <div>
        <textarea name="CommentText" rows="4" cols="50" required></textarea>
    </div>
    <button type="submit">Post Comment</button>
</form>

<hr />
<a href="/TopicPage/ConfirmDelete/@Model.TopicId">Delete Topic</a>
